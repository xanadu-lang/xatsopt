CPF=cp -f
CPFR=cp -f -r

######

all:: update

######

update:: MISC
update:: SATS
update:: DATS
update:: CATS
update:: HATS
update:: UTIL
update:: CONTRIB

######

update:: PRETOP
update:: PRESATS
update:: PREDATS
update:: PREDATSCATS
update:: XATSLIB

######
MISC:: ; \
$(CPF) \
$(XATSHOME)/srcgen0/Makefile_xatsopt ./srcgen0/.
MISC:: ; \
$(CPF) \
$(XATSHOME)/srcgen0/TEST/Makefile_prelude ./srcgen0/TEST/.
MISC:: ; \
$(CPF) \
$(XATSHOME)/srcgen0/TEST/Makefile_xatslib ./srcgen0/TEST/.

######

SATS:: ; \
$(CPF) $(XATSHOME)/srcgen0/SATS/*.sats ./srcgen0/SATS/.

DATS:: ; \
$(CPF) $(XATSHOME)/srcgen0/DATS/*.dats ./srcgen0/DATS/.

CATS:: ; \
$(CPF) $(XATSHOME)/srcgen0/CATS/*.cats ./srcgen0/CATS/.

HATS:: ; \
$(CPF) $(XATSHOME)/srcgen0/HATS/*.hats ./srcgen0/HATS/.

######

UTIL:: ; \
$(CPFR) $(XATSHOME)/srcgen0/UTIL/SATS ./srcgen0/UTIL/.
UTIL:: ; \
$(CPFR) $(XATSHOME)/srcgen0/UTIL/DATS ./srcgen0/UTIL/.
UTIL:: ; \
$(CPFR) $(XATSHOME)/srcgen0/UTIL/TEST ./srcgen0/UTIL/.

CONTRIB:: ; \
$(CPFR) $(XATSHOME)/srcgen0/DATS/CONTRIB ./srcgen0/DATS/.

######
#
PRETOP:: ; \
$(CPF) $(XATSHOME)/prelude/*.?ats ./prelude/.
#
PRESATS:: ; \
$(CPF) $(XATSHOME)/prelude/SATS/*.sats ./prelude/SATS/.
PRESATS:: ; \
$(CPF) $(XATSHOME)/prelude/SATS/CC/*.sats ./prelude/SATS/CC/.
PRESATS:: ; \
$(CPF) $(XATSHOME)/prelude/SATS/VT/*.sats ./prelude/SATS/VT/.
#
PREDATS:: ; \
$(CPF) $(XATSHOME)/prelude/DATS/*.dats ./prelude/DATS/.
PREDATS:: ; \
$(CPF) $(XATSHOME)/prelude/DATS/VT/*.dats ./prelude/DATS/VT/.
#
######
#
PREDATSCATS:: \
PREDATSCATS_CC
